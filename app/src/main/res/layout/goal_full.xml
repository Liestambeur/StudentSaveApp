<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/button_edge_background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:onClick="editGoal"
    android:clickable="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.8"
        android:duplicateParentState="true">

        <ImageView
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture"
            android:src="@drawable/ic_launcher"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:duplicateParentState="true"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|left">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Text"
                    android:id="@+id/goalName"
                    android:duplicateParentState="true"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Text"
                    android:id="@+id/goalAmount"
                    android:layout_gravity="center_horizontal"
                    android:duplicateParentState="true"
                    android:textColor="@color/SteelBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Text"
                    android:id="@+id/goalDone"
                    android:duplicateParentState="true"
                    android:textColor="@color/SteelBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Text"
                    android:id="@+id/goalDue"
                    android:duplicateParentState="true"
                    android:textColor="@color/SteelBlue"/>

            </LinearLayout>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/pencil_edit_goal"
                android:src="@drawable/potlood"
                android:scaleType="fitCenter"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="false"
                android:background="@null"
                android:tint="@color/LightSteelBlue"
                android:onClick="editGoal"
                android:layout_alignParentTop="true" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:duplicateParentState="true">

        <ProgressBar
            style="@style/tallerBarStyle"
            android:progressDrawable="@drawable/progress_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progressBar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:progress="0"
            android:duplicateParentState="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/goalProcent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:duplicateParentState="true"/>
    </RelativeLayout>

</LinearLayout>
