<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <Space
        android:id="@+id/emptySpace"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.02"
        android:focusable="true" />

    <EditText
        android:id="@+id/nameOfGoal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:layout_row="0"
        android:layout_column="0"
        android:text="name of goal"
        android:singleLine="true"
        android:maxLength="30"
        android:selectAllOnFocus="true"
        android:textColor="#797979" />

    <EditText
        android:id="@+id/amountToSave"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:layout_row="0"
        android:layout_column="0"
        android:text="amount to save"
        android:singleLine="true"
        android:maxLength="30"
        android:selectAllOnFocus="true"
        android:textColor="#797979"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:text="Choose a picture"
        android:id="@+id/choosePicture"
        android:autoLink="none"
        android:autoText="false"
        android:layout_weight="0.04"
        android:textColor="#7dd4ff"
        android:textSize="18dp"
        android:textStyle="normal"
        android:typeface="normal"
        android:gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture1"
            android:layout_weight="0.33"
            android:src="@drawable/auto"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="auto"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture2"
            android:layout_weight="0.33"
            android:src="@drawable/shopping"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="shopping"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture3"
            android:layout_weight="0.33"
            android:src="@drawable/bier"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="bier"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture4"
            android:layout_weight="0.33"
            android:src="@drawable/valies"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="valies"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture5"
            android:layout_weight="0.33"
            android:src="@drawable/spaarvarken"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="spaarvarken"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture6"
            android:layout_weight="0.33"
            android:src="@drawable/cadeaus"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="winkelkar"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.22"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture7"
            android:layout_weight="0.33"
            android:src="@drawable/multimedia"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="multimedia"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture8"
            android:layout_weight="0.33"
            android:src="@drawable/gitaar"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="gitaar"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/goalPicture9"
            android:layout_weight="0.33"
            android:src="@drawable/winkelkar"
            android:background="@null"
            android:clickable="true"
            android:onClick="chooseGoalPicture"
            android:contentDescription="cadeaus"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Ok"
            android:id="@+id/okGoal"
            android:layout_weight="0.5"
            android:clickable="true"
            android:onClick="okButton"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:text="Cancel"
            android:id="@+id/cancelGoal"
            android:layout_weight="0.5"
            android:onClick="cancelButton"/>
    </LinearLayout>

</LinearLayout>