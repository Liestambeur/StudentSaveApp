<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="be.kuleuven.chi.studentsave"
    android:versionCode="2"
    android:versionName="1.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/OurTheme" >
        <activity
            android:name="be.kuleuven.chi.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="be.kuleuven.chi.app.AddGoalPage1Activity"
            android:parentActivityName="be.kuleuven.chi.app.MainActivity"
            android:label="@string/title_activity_add_goal" >
        </activity>

        <activity
            android:name="be.kuleuven.chi.app.AddGoalPage2Activity"
            android:parentActivityName="be.kuleuven.chi.app.AddGoalPage1Activity"
            android:label="@string/title_activity_add_goal" >
        </activity>

        <activity
            android:name="be.kuleuven.chi.app.InputActivity"
            android:parentActivityName="be.kuleuven.chi.app.MainActivity"
            android:label="@string/title_activity_input">
        </activity>

        <activity
            android:name="be.kuleuven.chi.app.SaveActivity"
            android:parentActivityName="be.kuleuven.chi.app.MainActivity"
            android:label="@string/title_activity_save" >
        </activity>

        <activity
            android:name="be.kuleuven.chi.app.HistoryActivity"
            android:parentActivityName="be.kuleuven.chi.app.MainActivity"
            android:label="@string/title_activity_history" >
        </activity>

        <activity
            android:name="be.kuleuven.chi.app.ExternalPicutureActivity"
            android:parentActivityName="be.kuleuven.chi.app.MainActivity"
            android:label="@string/title_activity_externalpicture" >
        </activity>
    </application>

</manifest>
